@model Category

<h4 class="text-primary pt-3 text-center">
    Create Category
</h4>
<form method="post">
    <div class="row pt-2">
        <label class="p-1" asp-for="Name"></label>
        <input class="p-2 bg-dark-subtle border-0 rounded-1" asp-for="Name" placeholder="Enter Category Name"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="row pt-3">
        <label class="p-1" asp-for="DisplayOrder"></label>
        <input class="p-2 bg-dark-subtle border-0 rounded-1" asp-for="DisplayOrder" placeholder="Enter Display Order" />
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
    </div>
    <div class="row mt-3 text-center justify-content-center gap-1">
        <button type="submit" class="btn btn-primary col-5 border-0">Create</button>
        <a class="btn btn-secondary col-5 border-0" asp-controller="Category" asp-action="Index">Category List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
