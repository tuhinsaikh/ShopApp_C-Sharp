

@using System.Globalization
@model List<Product>

<div class="row justify-content-center">
    <div class="text-center mt-5 bg-warning rounded-1"><h1 class="fw-semibold">Product</h1></div>
    <div class="row justify-content-center mt-5">
        
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card m-auto">
                    <img src="@product.ImgUrl" class="card-img-top" alt="product image">
                    <div class="card-body pb-0">
                        <div class="pl-1">
                            <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Title</p>
                            <p class="card-title text-warning text-center">by <b>@product.Author</b></p>
                        </div>
                        <div class="pl-1">
                            <p class="text-dark text-opacity-75 text-center mb-0">
                                Price:
                                <span class="text-decoration-line-through">
                                    @product.ListPrice.ToString("C", new CultureInfo("hi-IN"))
                                </span>
                            </p>
                        </div>
                        <div class="pl-1">
                            <p class="text-dark text-opacity-75 text-center">
                                As low as:
                                <span>
                                    @product.Price100.ToString("C", new CultureInfo("hi-IN"))
                                </span>
                            </p>
                        </div>
                        <div class="p-1 pb-2">
                            <a asp-action="Details"
                               asp-route-productId="@product.Id"
                               class="btn btn-primary bg-gradient border-0 form-control">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</div>
<style>
    .container{
        margin-right:auto;
        margin-left:auto;
    }

    .row.justify-content-center > .col-md-4:not(:last-child) {
        margin-right: 0; 
    }

    .card {
        width: 250px;
        height: 400px;
    }

    .card .card-img-top {
         width: 100%;
         height: 200px;
         object-fit: cover;
    }
</style>